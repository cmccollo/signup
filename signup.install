			'sid' => array(
				'description' => 'The primary identifier for a signup.',
				'type' => 'serial',
				'unsigned' => TRUE,
				'not null' => TRUE
			),
			'first_name' => array(
				'type' => 'varchar',
				'length' => 255,
				'not null' => TRUE,
				'default' => '',
				'description' => 'First name.',
			),
			'last_name' => array(
				'type' => 'varchar',
				'length' => 255,
				'not null' => TRUE,
				'default' => '',
				'description' => 'Last name.',
			),
			'mail' => array(
				'type' => 'varchar',
				'length' => 64,
				'not null' => FALSE,
				'default' => '',
				'description' => "User's email address.",
			),
			'phone' => array(
				'type' => 'varchar',
				'length' => 255,
				'not null' => TRUE,
				'default' => '',
				'description' => 'Phone Number.',
			),
			'address_1' => array(
				'type' => 'varchar',
				'length' => 255,
				'not null' => TRUE,
				'default' => '',
